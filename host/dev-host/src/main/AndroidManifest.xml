<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.nolovr.shadow.core.host">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:name="com.nolovr.shadow.core.host.HostApplication"
        android:theme="@android:style/Theme.DeviceDefault"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.nolovr.shadow.core.host.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--   宿主添加插件view     -->
        <activity
            android:name="com.nolovr.shadow.core.host.plugin_view.HostAddPluginViewActivity"
            android:process=":plugin" />

        <!--很重要 SampleComponentManager 映射 name 不能改-->
        <provider
            android:authorities="${applicationId}.contentprovider.authority.dynamic"
            android:name="com.tencent.shadow.core.runtime.container.PluginContainerContentProvider"
            android:grantUriPermissions="true"
            android:process=":plugin" />

        <service
            android:name="com.nolovr.shadow.core.host.PluginProcessPPS"
            android:process=":plugin" />
        <service
            android:name="com.nolovr.shadow.core.host.Plugin2ProcessPPS"
            android:process=":plugin2" />
         <service
            android:name="com.nolovr.shadow.core.host.Plugin3ProcessPPS"
            android:process=":plugin" />

        <!--   启动插件     -->
        <activity
            android:name="com.nolovr.shadow.core.host.PluginLoadActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait" />

        <!--dynamic activity注册
          注意configChanges需要全注册
          theme需要注册成透明
          -->
        <activity
            android:name="com.nolovr.shadow.core.plugin.runtime.PluginDefaultProxyActivity"
            android:launchMode="standard"
            android:screenOrientation="portrait"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|screenSize|smallestScreenSize|layoutDirection"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"
            android:multiprocess="true" />

        <activity
            android:name="com.nolovr.shadow.core.plugin.runtime.PluginSingleInstance1ProxyActivity"
            android:launchMode="singleInstance"
            android:screenOrientation="portrait"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|screenSize|smallestScreenSize|layoutDirection"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"
            android:multiprocess="true" />

        <activity
            android:name="com.nolovr.shadow.core.plugin.runtime.PluginSingleTask1ProxyActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:configChanges="mcc|mnc|locale|touchscreen|keyboard|keyboardHidden|navigation|screenLayout|fontScale|uiMode|orientation|screenSize|smallestScreenSize|layoutDirection"
            android:hardwareAccelerated="true"
            android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"
            android:multiprocess="true"

            />
        <!--dynamic activity注册 end -->
        <receiver android:name="com.nolovr.shadow.core.host.plugin_view.MainProcessManagerReceiver">
            <intent-filter>
                <action android:name="sample_host.manager.startPluginService" />
            </intent-filter>
        </receiver>
        <activity android:name=".dev.DevActivity" />
    </application>

    <queries>
        <package android:name="com.nolovr.shadow.dev.host" />
        <package android:name="scut.carson_ho.contentprovider" />
        <package android:name="scut.carson_ho.contentprovider2" />
        <provider android:authorities="cn.scu.myprovider/user" />
        <provider android:authorities="cn.scu.myprovider/job" />
        <provider android:authorities="cn.scu.myprovider" />
    </queries>

</manifest>